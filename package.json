{
  "name": "claude-code-ext",
  "version": "1.0.0",
  "description": "Chrome extension for enhanced Claude Code web UI utilities",
  "type": "module",
  "scripts": {
    "dev": "bun run build:content --watch",
    "build": "bun run typecheck && bun run build:content && bun run build:background && bun run build:copy",
    "build:content": "vite build",
    "build:background": "BUILD_TARGET=background vite build",
    "build:copy": "cp -r public/* dist/",
    "typecheck": "vue-tsc --noEmit",
    "lint": "oxlint src/",
    "zip": "cd dist && zip -r ../claude-code-ext.zip ."
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.29",
    "@types/chrome": "^0.0.287",
    "@unocss/reset": "^66.1.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "oxlint": "latest",
    "typescript": "^5.7.2",
    "unocss": "^66.1.0",
    "vite": "^7.0.0",
    "vue-tsc": "^2.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}
